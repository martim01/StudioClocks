<clocks>
	<layout>
		<rows>2</rows>
		<cols>4</cols>
	</layout>
	<clock>
		<position>
			<row>0</row>
			<col>1</col>
		    <rows>2</rows>
			<cols>2</cols>
		</position>
		<type>analogue</type>
		<colours>
			<background>#000000</background>
			<foreground>#ffffff</foreground>
			<hands>#ffffff</hands>
			<secondhand>#aa0000</secondhand>
			<text>#c8c8c8</text>
			<hour>#ffffff</hour>
			<hour24>#ff0000</hour24>
		</colours>
		<options>
			<refresh>tick</refresh>
			<hour>24</hour>
			<text>true</text>
		</options>
		<timezone>
			<label>local</label>
			<offset>00:00</offset>
			<utc>false</utc>
		</timezone>
	</clock>
	<clock>
		<position>
			<row>0</row>
			<col>0</col>
		    <rows>1</rows>
			<cols>1</cols>
		</position>
