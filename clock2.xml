			<sextant pos="4">#ff8800</sextant>
			<sextant pos="5">#ff8800</sextant>
		</colours>
		<timezone>
			<label>UTC</label>
			<offset>00:00</offset>
			<utc>true</utc>
		</timezone>
		<options>
			<seconds>true</seconds>
			<timezone>true</timezone>
		</options>
	</clock>
